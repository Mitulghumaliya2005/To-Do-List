<%- include("header") %>
<div class="box" id="heading">
        <h1>
            <%= ListTitle %>
        </h1>
</div>

<div class="box">
    <% for(var i=0 ; i<listItem.length; i++) { %>
        <form action="/update/<%=listItem[i]._id%>" method="post">
            <div class="item"> 
                <% if(listItem[i].bool){ %>
                    <input type="checkbox"  onchange="this.form.submit()" >
                <% } else { %>
                    <input type="checkbox"  checked="true"  onchange="this.form.submit()">

                <% } %> 
                <p>
                    <%= listItem[i].item %>
                </p>
               </form>
                <form action="/delete/<%=ListTitle %>" method="post" style="margin-left: auto;margin-right: 20px ">
                <div>
                    <button style="background-color: white; color:black" type="submit" name="transh" value=<%= listItem[i]._id %> >
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg>
                    </button>
                </div>
                </form>
            </div>
      
    <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%=ListTitle %> >+ </button>
        </form>
</div>

<%- include("footer") %>
